html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="theme-color" content="#fff020")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Alfa+Slab+One|Roboto")
    link(rel="stylesheet", href="/assets/style.css")
    block meta
      if config.Blog.active
        title #{blog.name} - #{blog.tagline}
      else
        title #{pkg.name} - #{pkg.description}
      meta(name="description" content="A super awesome modular CMS for specialized content publishing.")
  body
    h2 
      a(href="/") #{config.Blog.active ? blog.name : pkg.name}
    if user
      nav
        p
          strong #{user.displayName || user.username}
          a(href="/logout")
            span  (Logout)
        p
          a(href="/admin") Admin
          if config.Blog.active
            |
            span &nbsp;&bull;&nbsp;
            |
            a(href="/editor") Blog Editor
    block content
    footer Crafted by Zero Daedalus &copy; 2018
      unless user
        |
        span &nbsp;&bull;&nbsp;
        |
        a(href="/login") Log in