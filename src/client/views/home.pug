extends base

block content
  .logout
    a(href="/logout") Log Out Here
  h3 Blog Overview
  .posts
    each post in posts
      .post
        a(href="/blog/" + post.postID) #{post.title}
        |
        span &nbsp;-&nbsp;
        |
        span #{moment(post.created).fromNow()}
  h3 Create New Post
  form.create-post(action="/blog" method="POST")
    fieldset
      div
        label(for="title") title
        input(type="text" name="title" placeholder="Dummy Data")
      div
        label(for="content") content
        textarea(name="content", cols="30", rows="5" placeholder="Dummy Data")
      div
        label(for="tags") tags
        input(type="text" name="tags" placeholder="Dummy Data")
      div
        label(for="seoTitle") Meta Title (for SEO)
        input(type="text" name="seoTitle" placeholder="Dummy Data")
      div
        label(for="seoDesc") Meta Description (for SEO)
        textarea(name="seoDesc", cols="30", rows="3" placeholder="Dummy Data")
    button Create
  h3 Podcast Overview
  .podcasts
    each podcast in podcasts
      .podcast
        div
          .pull-right
            a.delete(href="/podcast/" + podcast.slug + '?action=delete') Delete This
          a.podcast-title(href="/podcast/" + podcast.slug) #{podcast.title}
        div.pull-left
          //- TODO: Needs to accept a png and jpegs
          img.cover-art(src="/media/" + podcast.slug + "/cover.png", alt="")
        ul.podcast-meta
          li Episodes: #{podcast.episodes.length}
          li Last Published: #{moment(podcast.updatedOn).fromNow()}
          li Created: #{moment(podcast.createdOn).fromNow()}
          li Author: #{podcast.author}
  .sep
  h3 Create New Podcast
  form.create-podcast(action="/podcast" method="POST" enctype="multipart/form-data")
    fieldset
      div
        label(for="title") title
        input(type="text" name="title" placeholder="Dummy")
      div
        label(for="subtitle") subtitle
        input(type="text" name="subtitle" placeholder="Dummy")
      div
        label(for="website") website
        input(type="text" name="website" placeholder="Dummy")
      div
        label(for="author") author
        input(type="text" name="author" placeholder="Dummy")
      div
        label(for="keywords") keywords
        input(type="text" name="keywords" placeholder="Dummy")
      div
        label(for="slug") slug
        input(type="text" name="slug" placeholder="Dummy")
      div
        label(for="description") description
        textarea(type="text" name="description" row=3 placeholder="Dummy")
      div
        label(for="cover") cover img
        input(type="file" name="cover" accept=".jpg, .jpeg, .png")
      div
        label(for="explicit1") Explicit
        input#explicit1(type="radio" name="explicit" value="yes" placeholder="Dummy" checked)
        label(for="explicit2") Clean
        input#explicit2(type="radio" name="explicit" value="no" placeholder="Dummy")
    button Create